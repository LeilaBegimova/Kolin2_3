<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".presentation.ui.fragments.onbord.OnBordPagingThirt">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_two"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        app:lottie_autoPlay="true"
        app:lottie_imageAssetsFolder="imeges/"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/thri" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:text="@string/text_3"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_start_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:text="@string/text_4"
        android:textAlignment="center"
        android:textColor="@color/gray_et_e"
        android:textSize="18sp" />


</LinearLayout>